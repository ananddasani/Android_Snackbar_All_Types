<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/defaultSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Default Snackbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button SnackBar"
        app:layout_constraintEnd_toEndOf="@+id/defaultSB"
        app:layout_constraintStart_toStartOf="@+id/defaultSB"
        app:layout_constraintTop_toBottomOf="@+id/defaultSB" />

    <Button
        android:id="@+id/customSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Custom Snackbar"
        app:layout_constraintEnd_toEndOf="@+id/buttonSB"
        app:layout_constraintStart_toStartOf="@+id/buttonSB"
        app:layout_constraintTop_toBottomOf="@+id/buttonSB" />
</androidx.constraintlayout.widget.ConstraintLayout>
